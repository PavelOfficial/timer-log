{
  "compilerOptions": {
    "baseUrl": "./",
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strict": true,
    "noImplicitOverride": true,
    "target": "es6",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
    "webpack",
    "mock-middleware",
    ".eslintrc.js",
    "mock-server",
    "jest.config.ts",
    "jest-setup.ts",
    "jest"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "resolveJsonModule": true
    }
  }
}
